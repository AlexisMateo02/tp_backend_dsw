{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "useTabs": true,
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 120,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "bracketSameLine": false
      }
    ]
  }
}
